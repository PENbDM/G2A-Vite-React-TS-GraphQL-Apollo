generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id           String   @id @default(uuid())
  title        String
  description  String?
  price        Float    // This will be your final/discounted price
  oldPrice     Float?   // Optional: To show the crossed-out original price
  discount     Int?     @default(0) // The percentage (e.g., 44 for -44%)
  isBestSeller Boolean  @default(false)
  imgUrl       String?

  // New Fields
  platform     Platform
  region       Region
  edition      Edition
  type         GameType

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Platform {
  Steam
  Pc
  Ps5
  Xbox
}

enum Region {
  Global
  Europe
  Usa
}

enum Edition {
  Standard
  Deluxe
  Collection
}

enum GameType {
  Key
  Account
}